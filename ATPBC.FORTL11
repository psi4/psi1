      SUBROUTINE ATPBC(A,B,C,NI,NK,NJ)
C
      IMPLICIT REAL*8 (A-H,O-Z)
C
      REAL*8 A(NJ,NI),B(NI,NK),C(NK,NJ)
C
      CALL MXMB(B,1,NI,C,1,NK,A,NJ,1,NI,NK,NJ)
C
CTJL  DO 3 J=1,NJ
CTJL     DO 2 K=1,NK
CTJL        CKJ=C(K,J)
CTJL        IF (CKJ.EQ.0.0D+00) GO TO 2
CTJL        DO 1 I=1,NI
CTJL           A(J,I)=A(J,I)+B(I,K)*CKJ
CTJL1       CONTINUE
CTJL2    CONTINUE
CTJL3 CONTINUE
C
      RETURN
      END
